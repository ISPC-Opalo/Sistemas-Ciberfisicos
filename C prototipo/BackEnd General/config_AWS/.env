# Variables de entorno para GASLYT en AWS EC2
# Copiar a .env y configurar con valores reales

# ========================================
# CONFIGURACIÓN AWS
# ========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_IOT_ENDPOINT=your_endpoint.iot.us-east-1.amazonaws.com

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
MARIADB_ROOT_PASSWORD=rootpassword
MARIADB_DATABASE=opalodb
MARIADB_USER=opalouser
MARIADB_PASSWORD=opalopass

# ========================================
# CONFIGURACIÓN INFLUXDB
# ========================================
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=influxadminpassword
INFLUXDB_ORG=opalo-org
INFLUXDB_BUCKET=telemetria
INFLUXDB_RETENTION=30d
INFLUXDB_ADMIN_TOKEN=superinfluxadminpassword

# ========================================
# CONFIGURACIÓN BLOCKCHAIN
# ========================================
ETH_NETWORK=sepolia
ETH_RPC_URL=https://sepolia.infura.io/v3/YOUR_ID
ETH_PRIVATE_KEY=0x...
CONTRACT_ADDRESS=0x...

# ========================================
# CONFIGURACIÓN GRAFANA CLOUD
# ========================================
GRAFANA_CLOUD_URL=https://your-instance.grafana.net
GRAFANA_CLOUD_TOKEN=your_grafana_cloud_token
GRAFANA_CLOUD_ORG_ID=your_org_id

# ========================================
# CONFIGURACIÓN NGINX PROXY MANAGER
# ========================================
NPM_ADMIN_EMAIL=admin@yourdomain.com
NPM_ADMIN_PASSWORD=secure_npm_password

# ========================================
# CONFIGURACIÓN GENERAL
# ========================================
TZ=America/Argentina/Cordoba
BASE_DOMAIN=yourdomain.com

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
JWT_SECRET=gaslyt_jwt_secret_key_2024
ENCRYPTION_KEY=gaslyt_encryption_key_32_chars

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/blockchain-processor.log

# ========================================
# CONFIGURACIÓN DE PROCESAMIENTO
# ========================================
BATCH_SIZE=10
MAX_RETRIES=3
RETRY_DELAY=5
EXECUTION_HOUR=23
EXECUTION_MINUTE=59

# ========================================
# CONFIGURACIÓN REDIS
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# ========================================
# CONFIGURACIÓN CLOUDWATCH
# ========================================
CLOUDWATCH_LOG_GROUP_PREFIX=/aws/ec2/gaslyt
CLOUDWATCH_METRICS_NAMESPACE=GASLYT/System

# ========================================
# CONFIGURACIÓN GASLYT ESPECÍFICO
# ========================================
GASLYT_DEFAULT_INTERVAL=30
GASLYT_DEFAULT_THRESHOLD=1000.0
GASLYT_MAX_DEVICES=1000

# ========================================
# CONFIGURACIÓN TELEGRAF
# ========================================
TELEGRAF_INTERVAL=10s
TELEGRAF_DEBUG=false
TELEGRAF_QUIET=false

# ========================================
# CONFIGURACIÓN DE BACKUP
# ========================================
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
